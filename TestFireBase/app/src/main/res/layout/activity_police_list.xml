<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/hinhAnh"
            android:src="@drawable/congan"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/tenCongAn"
            android:text="Tên công an"
            android:textStyle="bold"
            android:textColor="@color/background"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/hinhAnh"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/capBac"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:text="Cấp bậc"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/background"
            app:layout_constraintStart_toEndOf="@+id/hinhAnh"
            app:layout_constraintTop_toBottomOf="@+id/tenCongAn" />

        <TextView
            android:id="@+id/sao"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:text="Sao"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/background"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            app:layout_constraintStart_toEndOf="@+id/hinhAnh"
            app:layout_constraintTop_toBottomOf="@+id/capBac" />

        <TextView
            android:id="@+id/quocGia"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:text="QG"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/background"
            android:layout_margin="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/noiCongTac"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="Nơi công tác"
            android:textSize="@dimen/_10ssp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="@color/background"
            app:layout_constraintStart_toEndOf="@+id/hinhAnh"
            app:layout_constraintTop_toBottomOf="@+id/sao" />

        <ImageView
            android:id="@+id/btnMenu"
            android:src="@drawable/ic_baseline_menu_24"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#E6A3D5" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>